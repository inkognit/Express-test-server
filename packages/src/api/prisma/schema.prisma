// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Users {
  id          String   @id @default(cuid())
  created_at  DateTime
  nick_name   String
  first_name  String
  last_name   String
  description String
  birthday    DateTime

}

model UserPass {
  id         String   @id @default(cuid())
  created_at DateTime
  user_id    String
  pass       String
  // Users      Users    @relation([id, user_id])
}

model Orders {
  id           String @id @default(cuid())
  descriptions String

}
