// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Users {
  id          String   @id @default(cuid())
  created_at  DateTime
  nick_name   String
  first_name  String
  last_name   String
  description String
  birthday    DateTime
  role         Role             @default(USER)
  userPass    UserPass?
}


model UserPass {
  id         String   @id @default(cuid())
  created_at DateTime
  user_id    String
  Users      Users     @relation(fields: [user_id], references: [id])
  pass       String
}

model Orders {
  id           String @id @default(cuid())
  descriptions String

}

enum Role {
  USER
  ADMIN
}