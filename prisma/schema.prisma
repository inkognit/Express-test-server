// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String   @id @default(cuid())
  created_at  DateTime @default(now())
  nick_name   String
  first_name  String
  last_name   String
  description String
  birthday    DateTime
  role        Role     @default(USER)
  userPass    UserPass @relation(fields: [pass_id], references: [id])
  pass_id     String   @unique
}

model UserPass {
  id         String   @id @default(cuid())
  created_at DateTime @default(now())
  user_id    String
  user       User?
  pass       String
}

model Orders {
  id           String @id @default(cuid())
  descriptions String
}

enum Role {
  USER
  ADMIN
}
