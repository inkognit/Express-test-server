datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String    @id @unique @default(cuid())
  created_at  DateTime  @default(now())
  nick_name   String    @unique
  first_name  String?
  last_name   String?
  description String?
  email       String    @unique
  birthday    DateTime
  role        Role      @default(USER)
  userPass    UserPass?
  pass_id     String
}

model UserPass {
  id         String   @id @default(cuid())
  created_at DateTime @default(now())
  user_id    String   @unique
  user       User?    @relation(fields: [user_id], references: [id])
  pass       String   @unique
}

model Orders {
  id           String @id @default(cuid())
  descriptions String
}

enum Role {
  USER
  ADMIN
  WRITER
}
