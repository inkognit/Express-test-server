datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String     @id @default(cuid())
  php_id      String     @unique
  created_at  DateTime   @default(now())
  nick_name   String     @unique
  first_name  String? 
  last_name   String? 
  description String? 
  email       String     @unique
  birthday    DateTime 
  role        Role       @default(USER)
  password    UserPass? 
  avatar      String     @default("")
}

model UserPass {
  id         String   @id @default(cuid())
  password   String
  updated_at DateTime @updatedAt
  user_id    String
  user       User     @relation(fields: [user_id], references: [id])
}

model Orders {
  id           String @id @default(cuid())
  descriptions String
}

enum Role {
  USER
  ADMIN
  WRITER
}
